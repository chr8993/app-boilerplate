#!/usr/bin/env node
var exec 		= require('child_process').exec;
var userArgs    = process.argv.slice(2);
var userInput   = userArgs[0];
var spawn 		= require('child_process').spawn;
var fs 			= require('fs');
var path 		= require('path');
var preinstall 	= require('../lib/scripts/preinstall.js');

/**
 *
 * @function init
 * @desc Initialization function
 * to start/end services.
 *
 */
var init = function() {

	if(userInput) {
		
		var input = userInput;
		switch(input) {
			/**
			 * @function preinstall
			 * @desc Runs pre-init 
			 * functions
			 *
			 */
			case 'preinstall': {
				//run pre-install script
				preinstall.install(function() {
					var m = "Finished installing.";
					console.log(m);
				});
				break;
			}
			/**
			 * @function init
			 * @desc Initializes
			 * a brand new project
			 *
			 */
			case 'init': {
				var d = path.resolve(__dirname, '../');
				var s = "../lib/scripts/init.js";
				var aptitude = require(s);
				aptitude.initialize(d);
				break;
			}
			
			case 'start': {
				console.log('starting server instance.');
				break;
			}

			case 'stop' : {
				console.log('stopping server instance.');
				break;
			}

			default: {
				console.log('showing documentation');
				break;
			}
		}
	}
};

var spawnProcess = function(cmd) {
	var p;
	var isWin = (process.platform == 'win32') ? true : false;
	if(isWin) {
		p = spawn(process.env.comspec, ['/c', cmd]);
	} 
	else {
		p = spawn(cmd);
	}
	return p;
};

init();